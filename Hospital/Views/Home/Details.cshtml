@model HomeDetailsViewModel


@{
    ViewBag.Title = "Doctor Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Doctor.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/noimage.jpg" />

                <h4>Employee ID : @Model.Doctor.DoctorId</h4>
                <h4>Email : @Model.Doctor.Email</h4>
                <h4>Category : @Model.Doctor.Category</h4>

            </div>
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
