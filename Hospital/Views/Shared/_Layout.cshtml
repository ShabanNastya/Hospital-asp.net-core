<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/content/site.css"/>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
        <a class="navbar-brand">
            <img src="~/images/doctorlogo.png" height="30" width="30"/>
            <p class="font-italic text-primary font-size: 14px">Be Healthy</p>
        </a>
        
        <button  class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link  text-primary font-weight-bold" asp-controller="Home" asp-action="Index">Врачи</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link  text-primary font-weight-bold" asp-controller="Users" asp-action="Index">Пользователи</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link text-success font-weight-bold" asp-controller="account" asp-action="Login">
                        Login
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-success font-weight-bold" asp-controller="account" asp-action="Register">
                        Register
                    </a>
                </li>
            </ul>
        </div>
    </nav>
<div >
    <main role="main" class="col-md-9">
        @RenderBody()
    </main>
</div>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - Hospital - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>